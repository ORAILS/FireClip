{
    "compilerOptions": {
        "sourceMap": true,
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "dist",
        "allowJs": true,
        "rootDir": "src/electron",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es2020", "dom"]
    },
    "exclude": ["node_modules", "dist/www", "out/**", "src/frontend/**"],
    "include": ["src/electron/**/*"]
}
